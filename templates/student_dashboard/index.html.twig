                                        {% else %}
                                            <span class="badge bg-secondary">{{ c.status }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Aucune candidature pour le moment.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {# Bloc Offres Disponibles #}
            <div class="col-lg-5 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        Offres disponibles
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            {% for stage in stages %}
                                <div class="col-12">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ stage.title }}</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">
                                                {{ stage.company }} - {{ stage.location }}
                                            </h6>
                                            <p class="card-text">
                                                Dur√©e : <strong>{{ stage.duration }}</strong>
                                            </p>
                                            <button class="btn btn-sm btn-primary">Postuler</button>
                                            <button class="btn btn-sm btn-outline-secondary">D√©tails</button>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p class="text-muted">Aucune offre disponible pour le moment.</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
